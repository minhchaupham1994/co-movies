<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".garbage.PlayMovieActivityOld">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:id="@+id/layout_container_controller_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@android:color/transparent">
            <ImageButton
                android:id="@+id/im_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/im_btn_back_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tv_app_name"/>
            <ImageButton
                android:id="@+id/im_btn_cast_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/im_btn_cast_selector"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_container_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent">
            <LinearLayout
                android:id="@+id/linear_contain_seek_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_running_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/tv_time_padding"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="00:00"/>
                <SeekBar
                    android:id="@+id/sb_running_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:padding="@dimen/tv_time_padding"
                    android:layout_gravity="center_vertical"
                    android:minHeight="1dp"
                    android:maxHeight="2dp"
                    android:progressDrawable="@drawable/seekbar_progress_color"
                    android:thumbTint="@android:color/holo_green_light"/>
                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/tv_time_padding"
                    android:layout_gravity="center_vertical"
                    android:text="10:00"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_container_contoller_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:background="@android:color/transparent">
                <RelativeLayout
                    android:id="@+id/layout_stop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/im_btn_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/im_btn_stop_selector"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_previous"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                    <ImageButton
                        android:id="@+id/im_btn_previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/im_btn_previous_selector"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_play"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                    <ImageButton
                        android:id="@+id/im_btn_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_play_circle_outline_white_48dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                    <ImageButton
                        android:id="@+id/im_btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/im_btn_next_selector"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_full_screen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                    <ImageButton
                        android:id="@+id/im_btn_full_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/im_btn_fullscreen_selector"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
